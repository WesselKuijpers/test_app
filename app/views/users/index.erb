<h1>All Users</h1>
<%= will_paginate %>
<% @users.each do |user| %>

  <ul>
    <li>
      <%= link_to gravatar_for(user), user_path(user) %>
    </li>
    <li>
      <%= link_to user.username, user_path(user) %>
    </li>
    <li>
      <%= pluralize(user.posts.count, "post") if user.posts %>
    </li>
    <% if logged_in? && current_user.admin? %>
      <li><%= link_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure?"} %></li>
    <% end %>
  </ul>

<% end %>
<%= will_paginate %>