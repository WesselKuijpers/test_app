<h1>All Users</h1>
<% @users.each do |user| %>

  <ul>
    <li>
      <%= link_to gravatar_for(user), user_path(user) %>
    </li>
    <li>
      <%= link_to user.username, user_path(user) %>
    </li>
    <li>
      <%= pluralize(user.posts.count, "post") if user.posts %>
    </li>
  </ul>

<% end %>